<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include layout="@layout/snippet_top_profilebar"/>

        <include layout="@layout/layout_bottom_navigation_view"/>
        <TextView
                android:text="Alexandra Kolonia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" android:id="@+id/textView" android:layout_marginTop="70dp"
                android:layout_marginLeft="0dp" android:textSize="30sp" android:textStyle="bold"
                android:textColor="@color/black" app:fontFamily="cursive"/>
        <ImageButton
                android:layout_width="146dp"
                android:layout_height="138dp" tools:srcCompat="@tools:sample/avatars"
                android:layout_alignParentStart="true" android:layout_marginStart="6dp"
                android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                android:id="@+id/imageButton3" android:layout_marginTop="129dp" android:layout_marginLeft="6dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="11dp" android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true" android:id="@+id/textView2" android:layout_marginBottom="210dp"
                android:layout_marginLeft="11dp" android:textColor="@color/black" android:textSize="18sp"
                android:text="Interests: food"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true" android:id="@+id/textView4" android:layout_marginBottom="176dp"
                android:layout_marginLeft="9dp" android:textColor="@color/black" android:textSize="18sp"
                android:text="Favorite place: Stockholm"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true" android:id="@+id/textView5" android:layout_marginBottom="141dp"
                android:layout_marginLeft="9dp" android:textColor="@color/black" android:textSize="18sp"
                android:text="This is a bio."/>
        <TextView
                android:text="Age: 19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_marginStart="11dp" android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true" android:id="@+id/textView3" android:layout_marginBottom="244dp"
                android:layout_marginLeft="11dp" android:textColor="@color/black" android:textSize="18sp"/>
        <Button
                android:text="Send a message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/button"
                android:layout_marginBottom="73dp"
                android:layout_marginLeft="9dp"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>